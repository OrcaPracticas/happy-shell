# -------------------------------------------------------- #
# Manejo de logs en consola.
# 
# INFO
# 
# -i: Texto de tipo informativo(valor por defecto)
# -e : Texto de tipo error
# -s : Texto de tipo success
# -w : Texto tipo alerta.
# 
# USO 
# 
# logs [modificador] [mensaje]
# 
# EJEMPLO
# 
# logs -i "Esto es un informe"
# -------------------------------------------------------- #
logs(){
    type=$1
    msg=$2
    textColor=255
    backGround=17
    case $type in
        -i)
            msgOut="[ â„¹ï¸ INFO     ] => ${msg}"
            backGround=17
        ;;
        -e)
            msgOut="[ âŒ ERROR    ] => ${msg}"
            backGround=52
        ;;
        -s)
            msgOut="[ ðŸ™Œ SUCCESS  ] => ${msg}"
            backGround=22
        ;;
        -w)
            msgOut="[ âš ï¸ WARNING  ] => ${msg}"
            backGround=11
            textColor=16
        ;;
        -m)
            msgOut="[ ðŸ”– MARK     ] => ${msg}"
            backGround=89
        ;;
        -c)
            msgOut="[ ðŸ’» COMMAND     ] => ${msg}"
            backGround=29
        ;;
        *)
            msg=$1
            msgOut="[ â„¹ï¸ INFO     ] => ${msg}"
            backGround=17
        ;;
    esac

    longitud=${#msgOut}
    c=""
    for ((i=$longitud; i <= 120; i++))
    do
        c="${c} "
    done
    
    title ${textColor} "${msgOut}${c}" ${backGround}
}
