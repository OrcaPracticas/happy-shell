# -------------------------------------------------------- #
# Permite realizar la actualizacion de los repositorios
# 
# INFO
#
# -c   : Actualiza el core de la app
# -ui  : Actualiza todas las ui's de la app
# -wl  : Actualiza todos los componentes.
# -app : Actualiza el core y las ui's
# -all : Actualiza core, ui's y componentes
# 
# USO 
#
# up [modificador]
#
# EJEMPLOS
#
# up -c
# up -ui
# up -wl
# up -app
# up -all
# -------------------------------------------------------- #
up(){
    action=$1
    interface=$2
    case $action in
        -cg)
            logs -i "Actualizando del core de GQL"
            gqlc
            git_dev
            git_update
            yip
            logs -s "Finbde actualizacion del core de GQL"
        ;;
        -c)
            logs -i "Actualizando el core"
            core
            gco $GIT_DEFAULT_BRANCH_UI
            git_update
            yip
            logs -s "Finde actualizacion del core"
        ;;
        -ui)
            uis
            logs -s "Actualizando UIS"
            ficheros=(`ls`)
            for item in ${ficheros[*]}
            do
                if [[ $item =~ "ui-" ]]
                then
                    logs -m "Actualizando la ${item}"
                    app ${item//ui-/}
                    gco $GIT_DEFAULT_BRANCH_UI
                    git_update
                fi
            done
            logs -s "Finde actualizacion de UIS"
        ;;
        -api)
            apis
            logs -s "Actualizando Apis"
            ficheros=(`ls`)
            for item in ${ficheros[*]}
            do
                if [[ $item =~ "gql-" ]]
                then
                    logs -m "Actualizando la api ${item}"
                    gapi ${item//gql-/}
                    git_dev
                    git_update
                fi
            done
            logs -s "Finde actualizacion de Apis"
        ;;
        -wl)
            wl
            ficheros=(`ls`)
            for item in ${ficheros[*]}
            do
                logs -m "Actualizando el ${item}"
                label $item
                gco master
                git_update
                yip
            done
        ;;
        -app)
            up -c
            up -ui
        ;;
        -all)
            up -app
            up -wl
            up -apis
        ;;
        -apis)
            up -cg
            up -api
        ;;
        *)
            logs -e "Facilite una de las opciones de actualizacion"
        ;;
    esac
}